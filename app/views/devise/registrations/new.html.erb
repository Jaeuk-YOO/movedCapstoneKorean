<style>
html, body {
  background-color:#f5f6f7;

  !important;
}
</style>

<div class="container" style="background-image:url('http://jetnews.com.mx/wp-content/uploads/2017/01/52.jpg'); background-repeat: no-repeat; background-size: 150%; height:100%;">
  <br><br><br><h4 style="color:white; text-shadow:black 3px 3px 3px;">당신의 서울 여행 걱정 <br>루트서울이 줄여드립니다.</h4><br><br><br><br> 
</div>
<div class="container vertical_wrap" style="display:table; width:100%; height:100%;">
<div class="align-middle" style="display:table-cell; text-align: left;">
<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "off", class: "form-control", type:"text", placeholder:"닉네임을 입력해주세요." %>
  </div>
  <br>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control", type:"email", placeholder:"이메일을 입력해주세요." %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(최소 <%= @minimum_password_length %>자 이상 입력하세요.)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", type:"password", placeholder:"비밀번호를 입력해주세요." %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", type:"password", placeholder:"비밀번호를 다시 한 번 입력해주세요."  %>
  </div>
  <br>
  <button class="btn text-center btn-block" style="background-color:#E0859A; color:black;" type="submit" name="commit" value="회원가입">
    <h5>회원가입</h5>
  </button>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
